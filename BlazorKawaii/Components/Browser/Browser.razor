@namespace BlazorKawaii.Components
@using static BlazorKawaii.Components.BrowserPaths
@using static BlazorKawaii.Common.SvgFormatHelper

<Wrapper ClassName="@ClassName">
  <svg
    width="@FormatSvgNumber(Size * 1.1)"
    height="@Size"
    viewBox="0 0 200 138">
    <g id="kawaii-browser">
      <g id="browser__body">
        <path
          id="browser__body-shape"
          fill="@Color"
          d="@Shape"/>
        <path
          id="browser__body-shape-shadow"
          fill="#121212"
          fillRule="nonzero"
          opacity="0.1"
          d="@BrowserPaths.Shadow"/>
        <path
          id="browser__body-address-bar"
          fill="#121212"
          fillRule="nonzero"
          opacity="0.07"
          d="@AddressBar"/>
      </g>
      <Face
        Mood="@Mood"
        Transform="translate(67 53)"
        UniqueId="@GetUniqueId()"/>
    </g>
  </svg>
</Wrapper>