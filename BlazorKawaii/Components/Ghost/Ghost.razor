@namespace BlazorKawaii.Components
@using static BlazorKawaii.Components.GhostPaths
@using static BlazorKawaii.Common.SvgFormatHelper

<Wrapper ClassName="@ClassName">
  <svg
    width="@FormatSvgNumber(Size * 0.72)"
    height="@Size"
    viewBox="0 0 130 168">
    <g id="kawaii-ghost">
      <g id="ghost__body">
        <path
          id="ghost__body-shape"
          fill="@Color"
          d="@Shape"/>
        <path
          id="ghost__body-shadow"
          fill="#121212"
          fillRule="nonzero"
          opacity="0.1"
          d="@GhostPaths.Shadow"/>
      </g>
      <Face
        Mood="@Mood"
        Transform="translate(35 57)"
        UniqueId="@GetUniqueId()"/>
    </g>
  </svg>
</Wrapper>