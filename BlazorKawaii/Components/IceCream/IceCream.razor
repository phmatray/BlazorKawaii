@namespace BlazorKawaii.Components
@using static BlazorKawaii.Components.IceCreamPaths
@using static BlazorKawaii.Common.SvgFormatHelper

<Wrapper ClassName="@ClassName">
  <svg
    width="@FormatSvgNumber(Size * 0.56)"
    height="@Size"
    viewBox="0 0 127 225">
    <g id="kawaii-icecream">
      <g id="icecream__body">
        <path
          id="icecream__body-stick"
          fill="#FCCB7E"
          d="@Stick"/>
        <path
          id="icecream__body-shape"
          fill="@Color"
          d="@Shape"/>
        <path
          id="icecream__body-shadow"
          fill="#121212"
          fillRule="nonzero"
          opacity="0.1"
          d="@IceCreamPaths.Shadow"/>
      </g>
      <Face
        Mood="@Mood"
        Transform="translate(28 71)"
        UniqueId="@GetUniqueId()"/>
    </g>
  </svg>
</Wrapper>