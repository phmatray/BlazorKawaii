@namespace BlazorKawaii.Components
@using static BlazorKawaii.Components.SpeechBubblePaths

<Wrapper ClassName="@ClassName">
  <svg
    width="@Size"
    height="@Size"
    viewBox="0 0 170 170">
    <g id="kawaii-speechBubble">
      <g id="speechBubble__body">
        <path
          id="speechBubble__body-shape"
          fill="@Color"
          d="@Body"/>
        <path
          id="speechBubble__body-shadow"
          fill="#121212"
          fillRule="nonzero"
          opacity="0.1"
          d="@SpeechBubblePaths.Shadow"/>
      </g>
      <Face
        Mood="@Mood"
        Transform="translate(47 50)"
        UniqueId="@GetUniqueId()"/>
    </g>
  </svg>
</Wrapper>