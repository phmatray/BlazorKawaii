<g id="kawaii-face" transform="@Transform">
  <defs>
    <path d="@FacePaths.Defs" id="kawaii-face__path-1"/>
  </defs>
  <g id="kawaii-face__mouth" transform="translate(18.000000, 16.000000)">
    @if (Mood is Blissful or Lovestruck or Excited)
    {
      <g
        id="kawaii-face__mouth__joy"
        transform="translate(0.000000, 1.000000)">
        <mask id=@($"kawaii-face__mask-2-{UniqueId}") fill="white">
          <use xlinkHref="#kawaii-face__path-1"/>
        </mask>
        <use
          id="Combined-Shape"
          fill="#000000"
          xlinkHref="#kawaii-face__path-1"/>
        <path
          d="@FacePaths.Tongue"
          id="kawaii-face__tongue"
          fill="#E74144"
          mask=@($"url(#kawaii-face__mask-2-{UniqueId})")
          transform="translate(15.000000, 11.431885) scale(1, -1) translate(-15.000000, -11.431885)"/>
      </g>
    }
    @if (Mood is Happy)
    {
      <path d="@FacePaths.Happy" id="kawaii-face__mouth__happy" fill="#000000"/>
    }
    @if (Mood is Shocked)
    {
      <ellipse
        id="kawaii-face__mouth__shocked"
        cx="15"
        cy="14"
        rx="9"
        ry="10"
        fill="#000000"/>
    }
    @if (Mood is Sad or Ko)
    {
      <path
        d="@FacePaths.Sad"
        id="kawaii-face__mouth__sad"
        fill="#000000"
        transform="translate(14.999999, 5.500000) scale(1, -1) translate(-14.999999, -5.500000)"/>
    }
  </g>
  <g
    id="kawaii-face__blush"
    transform="translate(0.000000, 15.000000)"
    fill="#000000"
    opacity="0.2">
    <circle cx="3" cy="3" r="3"/>
    <circle cx="63" cy="3" r="3"/>
  </g>
  <g
    id="kawaii-face__eyes"
    transform="translate(2.000000, 0.000000)"
    fill="#000000">
    @if (Mood is Blissful)
    {
      <g
        id="kawaii-face__eyes__arc"
        transform="translate(1.000000, 0.000000)">
        <path d="@FacePaths.Bliss1"/>
        <path d="@FacePaths.Bliss2"/>
      </g>
    }
    @if (Mood is Happy or Sad or Shocked or Excited)
    {
      <g
        id="kawaii-face__eyes__circle"
        transform="translate(1.000000, 2.000000)">
        <circle cx="4.5" cy="4.5" r="4.5"/>
        <circle cx="56.5" cy="4.5" r="4.5"/>
      </g>
    }
    @if (Mood is Lovestruck)
    {
      <g
        id="kawaii-face__eyes__heart"
        transform="translate(0.000000, 2.000000)"
        fillRule="nonzero">
        <path d="@FacePaths.Lovestruck1" id="Shape"/>
        <path d="@FacePaths.Lovestruck2" id="Shape"/>
      </g>
    }
    @if (Mood is Ko)
    {
      <g
        id="kawaii-face__eyes__ko"
        transform="translate(1.500000, 1.000000)"
        fillRule="nonzero">
        <path d="@FacePaths.Ko1" id="Cross"/>
        <path d="@FacePaths.Ko2" id="Cross"/>
      </g>
    }
  </g>
</g>